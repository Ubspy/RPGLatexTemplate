% ------------------- %
% Background of pages %
% ------------------- %
\backgroundsetup{
	scale=1,
	color=black,
	opacity=1,
	angle=0,
	contents={
		\includegraphics[width=\paperwidth, height=\paperheight]{images/PHB-background.png}
	}
}

% ------------- %
% Float spacing %
% ------------- %
\setlength{\textfloatsep}{11pt plus 4pt minus 4pt}
\setlength{\intextsep}{11pt plus 4pt minus 4pt}
\setlength{\dbltextfloatsep}{11pt plus 4pt minus 4pt}

% --------------- %
% Itemize styling %
% --------------- %
\setlist{leftmargin=1em}
\setitemize{noitemsep,topsep=0.5ex}
\renewcommand{\labelitemi}{\raisebox{0.25ex}{\tiny{\( \bullet \)}}}

% ------------- %
% Page geometry %
% ------------- %
\geometry
{
	hmargin   = .75in, % Left and right margins
	top       = .46in, % Top of text area to top of page
	bottom    = .8in,  % Bottom of text area to bottom of page
	footskip  = .32in, % Bottom of text area to bottom of footer text
	columnsep = .33in, % Space between columns
}

% -------------------------- %
% Paragraph and line spacing %
% -------------------------- %
\setlength{\parindent}{1em}
\setlength{\RaggedRightRightskip}{0pt plus 1em}
\setlength{\RaggedRightParindent}{\parindent}

% -------- %
% Warnings %
% -------- %
\tolerance        = 1
\emergencystretch = \maxdimen
\hyphenpenalty    = 10000
\hbadness         = 10000

% ----------------- %
% Table of Contents %
% ----------------- %
% Set ToC to show all the way to subsections
\settocdepth{subsection}

% Set the table of contents title to print in the center using
% a custom font
\renewcommand{\printtoctitle}[1]{\filcenter\RPGFontToCTitle #1}

% Set part font and how the part is written
\renewcommand{\cftpartfont}{\RPGFontToCPart}
\renewcommand{\cftpartpagefont}{\RPGFontToCPart}
\renewcommand{\partnumberline}[1]{Part~#1:~}

% Add a line after a part
\renewcommand{\cftpartafterpnum}
{
	\vspace{.6ex}
	{\color{breakgold}\hrule}
}

% Set ToC Chapter fonts
\renewcommand{\cftchapterfont}{\RPGFontToCChapter}
\renewcommand{\cftchapterpagefont}{\RPGFontToCChapter}

% This was taken from stack exchange, I don't understand how it works
% but it changes how it writes out chapters in ToC
\makeatletter
\renewcommand\cftchaptername{\chaptername~}
\renewcommand\chapternumberline[1]
{
   \@chapapp@head\@cftbsnum {#1}:\@cftasnum~
}
\makeatother

% Set section fonts in ToC
\renewcommand{\cftsectionfont}{\RPGFontToCSection}
\renewcommand{\cftsectionpagefont}{\RPGFontToCSection}

% Set subsection fonts in ToC
\renewcommand{\cftsubsectionfont}{\RPGFontToCSubSection}
\renewcommand{\cftsubsectionpagefont}{\RPGFontToCSubSection}
